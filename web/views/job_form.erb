<div class="mb-6">
  <a href="/jobs" class="text-sm text-slate-500 hover:text-slate-700">&larr; Jobs</a>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 max-w-2xl">
  <h1 class="text-2xl font-bold text-slate-900 mb-6"><%= @job.id ? "Edit Job ##{@job.id}" : "New Job" %></h1>

  <form method="post" action="<%= @job.id ? "/jobs/#{@job.id}" : "/jobs" %>" class="space-y-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Name</label>
        <input name="name" value="<%= @job.name %>" required class="block w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 text-sm" />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Task file path</label>
        <input name="task_file_path" value="<%= @job.task_file_path %>" required class="block w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 text-sm" />
      </div>
    </div>
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-1">Default variables (JSON)</label>
      <textarea name="default_variables_json" rows="6" class="block w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 font-mono text-sm"><%= @job.default_variables_json || "{}" %></textarea>
      <p class="mt-1 text-xs text-slate-500">Example: <code class="px-1.5 py-0.5 bg-slate-100 rounded">{"domain_name":"example.com","port":3000}</code></p>
    </div>
    <div class="flex items-center gap-3 pt-2">
      <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Save</button>
      <a href="/jobs" class="text-sm text-slate-600 hover:text-slate-900">Cancel</a>
    </div>
  </form>
</div>
