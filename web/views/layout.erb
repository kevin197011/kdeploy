<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Kdeploy Job Console</title>
    <style>
      body { font-family: ui-sans-serif, system-ui, -apple-system; margin: 24px; }
      a { color: #0366d6; text-decoration: none; }
      table { border-collapse: collapse; width: 100%; }
      th, td { border: 1px solid #ddd; padding: 8px; font-size: 14px; }
      th { background: #f5f5f5; text-align: left; }
      .muted { color: #666; }
      .pill { padding: 2px 8px; border-radius: 999px; font-size: 12px; display: inline-block; }
      .queued { background: #eef; }
      .running { background: #ffe; }
      .succeeded { background: #efe; }
      .failed { background: #fee; }
      code { background: #f6f8fa; padding: 1px 4px; border-radius: 4px; }
      input, textarea, select { width: 100%; padding: 8px; box-sizing: border-box; }
      .row { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
      .actions { margin-top: 12px; display: flex; gap: 8px; }
      button { padding: 8px 12px; }
      pre { background: #0b1020; color: #e6edf3; padding: 12px; overflow: auto; }
    </style>
  </head>
  <body>
    <div class="actions">
      <a href="/jobs">Jobs</a>
      <a href="/runs">Runs</a>
    </div>
    <hr />
    <%= yield %>
  </body>
</html>

