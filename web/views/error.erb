<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
  <div class="flex items-start gap-4">
    <div class="h-10 w-10 rounded-full bg-red-50 text-red-600 flex items-center justify-center font-semibold">
      !
    </div>
    <div class="flex-1">
      <h1 class="text-xl font-semibold text-slate-900"><%= @error_title %></h1>
      <p class="mt-2 text-slate-600"><%= @error_message %></p>
      <% if @error_hint %>
        <p class="mt-3 text-sm text-slate-500"><%= @error_hint %></p>
      <% end %>
      <div class="mt-5 flex items-center gap-3">
        <a href="/jobs" class="inline-flex items-center rounded-md bg-slate-900 text-white px-4 py-2 text-sm font-medium hover:bg-slate-800">
          Back to Jobs
        </a>
        <a href="/runs" class="inline-flex items-center rounded-md border border-slate-300 px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">
          View Runs
        </a>
      </div>
    </div>
  </div>
</div>
